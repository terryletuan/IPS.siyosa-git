@using IndoorTracking.Common
<div class="menu-main Rp_By_group tab-pane active dispay_none" id="tab_0" style="background: white;">
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>REPORT BY GROUP
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->

            <form action="#" class="form-horizontal" enctype="multipart/form-data" method="post" role="form">
                <div class="form-body row">
                    <div class="form-group">
                        <label class="control-label col-md-2">Select group:</label>
                        <div class="col-md-2">
                            <select class="form-control bygroup-device">
                                <option>group 1</option>
                                <option>group 2</option>
                                <option>group 3</option>
                            </select>
                        </div>
                        <label class="control-label col-md-2">From:</label>
                        <div class="col-md-3">
                            <input type="datetime-local" class="form-control " id="fromDateGroup" placeholder="From">
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-searchgroupdevice">Search</button>
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                        </div>
                        <label class="control-label col-md-2">To:</label>
                        <div class="col-md-3">
                            <input type="datetime-local" class="form-control " id="toDateGroup" placeholder="To">
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-exportgroup">Export</button>
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>
                </div>

            </form>
            <!-- END FORM-->
        </div>
    </div>

    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>Detail REPORT BY GROUP
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form" style="height: 1200px">
            <div id="mapgroup" class="col-md-12" style="height: 500px">

            </div>
            <div class="col-md-12  main-title-report" >
                <table class="table">
                    <tr>
                        <td>
                            <div class="form-group row dispay_none">
                                <label class="control-label">HOYA LENS VIET NAM</label>
                            </div>
                            <div class="form-group row dispay_none">
                                <label class="control-label">APPLICATION: INDOOR TRACKING PEOPLE & ASSETV-1</label>
                            </div>
                            <div class="form-group row dispay_none">
                                <label class="control-label">REPORT BY SPECIFIED GROUP TRACKED TAG:</label>
                            </div>
                            <div class="form-group row dispay_none">
                                <label class="control-label col-md-5">Use in used:</label>
                                <label class="control-label col-md-7 ">@Command.GetUserCookie()</label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Check Time:</label>
                                <label class="control-label col-md-7 datesystemgroup"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Specific time:</label>
                                <label class="control-label col-md-7"><span class="fromdatetrackedgroup"> </span>            <span class="todatetrackedgroup"></span></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Report for group:</label>
                                <label class="control-label col-md-7 groupname"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Total distance:</label>
                                <label class="control-label col-md-7 totaldistantrackedgroup"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Average speed:</label>
                                <label class="control-label col-md-7 totalaveagegroup"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Total recorded points:</label>
                                <label class="control-label col-md-7 totalpointgroup"></label>
                            </div>
                        </td>
                    </tr>
                </table>

            </div>
            <div class="dispay_none" id="mainexporttrackedgroup">
                <table border="1">
                    <tr>
                        <td colspan="2">REPORT BY SPECIFIED GROUPS</td>
                    </tr>
                    <tr>
                        <td>Use in used:</td>
                        <td>@Command.GetUserCookie()</td>
                    </tr>
                    <tr>
                        <td>Check Time:</td>
                        <td class="datesystemgroup"></td>
                    </tr>
                    <tr>
                        <td>Report for group:</td>
                        <td class="groupname"></td>
                    </tr>
                    <tr>
                        <td>Check history from:</td>
                        <td class="fromdatetrackedgroup"></td>
                    </tr>
                    <tr>
                        <td>Check history to:</td>
                        <td class="todatetrackedgroup"></td>
                    </tr>
                    <tr>
                        <td>Total distance:</td>
                        <td class="totaldistantrackedgroup"></td>
                    </tr>
                    <tr>
                        <td>Average speed:</td>
                        <td class="totalaveagegroup"></td>
                    </tr>
                    <tr>
                        <td>Total recorded points:</td>
                        <td class="totalpointgroup"></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

</div>
