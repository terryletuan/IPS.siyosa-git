@using IndoorTracking.Common
<div class="menu-main ChangePassword tab-pane active dispay_none" id="tab_0" style="background: white;">
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>Change Password system
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->

            <form action="#" class="form-horizontal" enctype="multipart/form-data" method="post" role="form">
                <div class="form-body row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2"> Username :</label>
                            <div class="col-md-3">
                                <input type="text" readonly="readonly" value="@Command.GetUserCookie()" class="form-control fr-Username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Password :</label>
                            <div class="col-md-3">
                                <input type="password"  class="form-control  fr-Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Password New :</label>
                            <div class="col-md-3">
                                <input type="password"  class="form-control fr-Passwordnew">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Password Confirm :</label>
                            <div class="col-md-3">
                                <input type="password"  class="form-control fr-PasswordConfirm">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <div class="col-md-3">
                                <button type="button" class="btn btn-primary btn-changePass"><i class="fa fa-plus-circle"></i>ChanPassword</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>
    
