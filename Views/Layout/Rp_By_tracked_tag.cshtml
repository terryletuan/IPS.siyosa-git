@using IndoorTracking.Common
<div class="menu-main bytrackedtag tab-pane active dispay_none" id="tab_0" style="background: white;">
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>REPORT BY SPECIFIED TRACKED TAG
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->

            <form action="#" class="form-horizontal" enctype="multipart/form-data" method="post" role="form">
                <div class="form-body row">
                    <div class="form-group">
                        <label class="control-label col-md-2">Select tracked tag:</label>
                        <div class="col-md-2">
                            <select class="form-control bytrackedtag-devicef bytrackedtag-device">
                                <option>no device</option>
                            </select>
                        </div>
                        <label class="control-label col-md-2">From:</label>
                        <div class="col-md-3">
                            <input type="datetime-local" class="form-control " id="fromdate_bytracked_tag" placeholder="From">
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-rptrackedtag">Search</button>
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                        </div>
                        <label class="control-label col-md-2">To:</label>
                        <div class="col-md-3">
                            <input type="datetime-local" class="form-control " id="Todate_bytrackedtag" placeholder="To">
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-exporttracked">Export</button>
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>
                </div>

            </form>
            <!-- END FORM-->
        </div>
    </div>

    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>Report Detail
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form "  style="height: 12000px">
            <div id="mapbttracked" class="col-md-12" style="height: 750px">

            </div>
            <div class="col-md-12 main-title-report" >
                <table class="table">
                    <tr>
                        <td>
                            <div class="form-group row dispay_none">
                                <label class="control-label">HOYA LENS VIET NAM</label>
                            </div>
                            <div class="form-group row dispay_none">
                                <label class="control-label">APPLICATION: INDOOR TRACKING PEOPLE & ASSETV-1</label>
                            </div>
                            <div class="form-group row dispay_none">
                                <label class="control-label">REPORT BY SPECIFIED TRACKED TAG:</label>
                            </div>
                            <div class="form-group row dispay_none">
                                <label class="control-label col-md-5">Use in used:</label>
                                <label class="control-label col-md-7">@Command.GetUserCookie()</label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Check Time:</label>
                                <label class="control-label col-md-7 datesystem"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Specific time:</label>
                                <label class="control-label col-md-7"><span class="fromdatetracked"></span>            <span class="todatetracked"></span></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Report for tracked tag:</label>
                                <label class="control-label col-md-7 device-dp"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Total distance:</label>
                                <label class="control-label col-md-7 totaldistantracked"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Average speed:</label>
                                <label class="control-label col-md-7 totalaveage"></label>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-5">Total recorded points:</label>
                                <label class="control-label col-md-7 totalpoint"></label>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="dispay_none" id="mainexporttracked">
                <table border="1">
                    <tr>
                        <td colspan="2">REPORT BY SPECIFIED TRACKED TAG:</td>
                    </tr>
                    <tr>
                        <td>Use in used:</td>
                        <td>@Command.GetUserCookie()</td>
                    </tr>
                    <tr>
                        <td>Check Time:</td>
                        <td class="datesystem"></td>
                    </tr>
                    <tr>
                        <td>Report for tracked tag:</td>
                        <td class="device-dp"></td>
                    </tr>
                    <tr>
                        <td>Check history from:</td>
                        <td class="fromdatetracked"></td>
                    </tr>
                    <tr>
                        <td>Check history to:</td>
                        <td class="todatetracked"></td>
                    </tr>
                    <tr>
                        <td>Total distance:</td>
                        <td class="totaldistantracked"></td>
                    </tr>
                    <tr>
                        <td>Average speed:</td>
                        <td class="totalaveage"></td>
                    </tr>
                    <tr>
                        <td>Total recorded points:</td>
                        <td class="totalpoint"></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
