<div class="menu-main usermanager tab-pane active dispay_none" id="tab_0" style="background: white;">
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>Local user management
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->

            <form action="#" class="form-horizontal" enctype="multipart/form-data" method="post" role="form">
                <div class="form-body row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2"> Username :</label>
                            <div class="col-md-3">
                                <input type="text"  class="form-control u-username" required="">
                                <input type="hidden" id="IDuser" name="ID" value="0">

                            </div>
                            <label class="control-label col-md-2">Full Name :</label>
                            <div class="col-md-3">
                                <input type="text"  class="form-control u-fullname">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Password :</label>
                            <div class="col-md-3">
                                <input type="password" class="form-control u-password">
                            </div>
                            <label class="control-label col-md-2">Phone :</label>
                            <div class="col-md-3">
                                <input type="text"  class="form-control u-phone" maxlength="50">
                            </div>
                        </div>
                        <div class="form-group">
                            
                            <label class="control-label col-md-2">Email:</label>
                            <div class="col-md-3">
                                <input type="text" maxlength="50" class="form-control u-email">
                            </div>
                            <label class="control-label col-md-2">Address:</label>
                            <div class="col-md-3">
                                <input type="text" maxlength="500"  class="form-control u-address" required="">

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">User Group :</label>
                            <div class="col-md-3">
                                <select class="form-control u-usergroup">

                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <div class="col-md-3">
                                <button type="button" class="btn btn-primary btn-user"><i class="fa fa-plus-circle"></i>Save</button>
                                <button type="button" class="btn btn-danger btn-clearuser"><i class="fa fa-plus-circle"></i>Clear</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
            <!-- END FORM-->
        </div>
    </div>

    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>List Local user management
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <table class="dataTable no-footer table table-vcenter table-condensed table-bordered" id="data-user">
                <thead>
                    <tr>
                        <th>FullName</th>
                        <th>Username</th>
                        <th>Passwork</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            
            <!-- END FORM-->
        </div>
    </div>
    
</div>
